<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRemind.Views.MenuPage">
    <ContentPage.Title>
        MyRemind - Menu
    </ContentPage.Title>
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Image Source="myremindmenu.png" HeightRequest="200" Margin="20"/>
            <Button Text="Add Reminder" Clicked="AddButton_Clicked"/>
            <Button Text="View Reminders" Clicked="ViewButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>