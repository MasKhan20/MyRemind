<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRemind.Views.RemindersPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Reminder" Command="{Binding NewReminderCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="My Reminders" FontSize="Large" TextColor="Black" FontAttributes="Bold"/>
            <ListView 
                x:Name="RemindersListView"
                ItemsSource="{Binding MyReminders}" 
                HasUnevenRows="True" 
                IsPullToRefreshEnabled="True"
                IsRefreshing="{Binding IsRemindersRefreshing}"
                RefreshCommand="{Binding RefreshRemindersCommand}"
                SelectedItem="{Binding SelectedReminder, Mode=TwoWay}"
                ItemSelected="ListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0">
                                    <Label 
                                        Text="{Binding Title}" 
                                        FontSize="Medium" 
                                        TextColor="Black"
                                        LineBreakMode="NoWrap"/>
                                    <Label 
                                        Text="{Binding Description}" 
                                        FontSize="Small" 
                                        TextColor="Gray"
                                        LineBreakMode="NoWrap"/>
                                </StackLayout>
                                <Switch Grid.Column="1" IsToggled="{Binding ActiveRemind}"/>
                            </Grid>
                            <!--<TextCell
                                Text="{Binding Title}"
                                Detail="{Binding Description}"
                                TextColor="Black"
                                DetailColor="Gray">
                            </TextCell>-->
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>